<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:id="@+id/homeFragment"
    tools:context=".fragment.HomeFragment">

    <ImageView
            android:id="@+id/home_uzmonile_icon"
            android:layout_width="@dimen/uzb_icon_width"
            android:layout_height="@dimen/uzb_icon_height"
            android:src="@drawable/home_uzmobile_icon" />

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="MILLIY OPERATOR"
            android:textColor="@color/white"
            android:textSize="@dimen/home_title_text_size" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/banner_item"
            android:layout_width="@dimen/home_banner_width"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/home_viewPager_margin_top"
            android:background="@drawable/banner_item_background"
            android:backgroundTint="@color/Secondary_color">


        </androidx.viewpager2.widget.ViewPager2>

        <LinearLayout
            android:id="@+id/banner_indicators"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/home_indicators_margin_top"
            android:orientation="horizontal">

        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:id="@+id/service_card"
            android:layout_width="@dimen/home_grid_width"
            android:layout_height="@dimen/home_grid_height"
            android:layout_marginTop="@dimen/home_grid_card_margin_top"
            app:cardCornerRadius="10dp">

            <GridLayout
                android:id="@+id/service_container"
                android:layout_width="@dimen/home_grid_width"
                android:layout_height="@dimen/home_grid_height"
                android:background="@color/white"
                android:columnCount="3"
                android:rowCount="3">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_rowWeight="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:id="@+id/ussd_fragment"
                        android:layout_width="@dimen/home_grid_icon_size"
                        android:layout_height="@dimen/home_grid_icon_size"
                        android:background="@drawable/service_back"
                        android:padding="10dp"
                        android:src="@drawable/hashtag" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        android:text="USSD"
                        android:textColor="#4C4F51"
                        android:textSize="@dimen/home_grid_item_text_size" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_rowWeight="1"
                    android:layout_column="1"
                    android:layout_columnWeight="1"

                    android:layout_gravity="center"
                    android:orientation="vertical"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:id="@+id/tarif_fragment"
                        android:layout_width="@dimen/home_grid_icon_size"
                        android:layout_height="@dimen/home_grid_icon_size"
                        android:background="@drawable/service_back"
                        android:padding="10dp"
                        android:src="@drawable/credit_card" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        android:text="Tarif"
                        android:textColor="#4C4F51"
                        android:textSize="@dimen/home_grid_item_text_size" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_rowWeight="1"
                    android:layout_column="2"
                    android:layout_columnWeight="1"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:id="@+id/service_fragment"
                        android:layout_width="@dimen/home_grid_icon_size"
                        android:layout_height="@dimen/home_grid_icon_size"
                        android:background="@drawable/service_back"
                        android:padding="10dp"
                        android:src="@drawable/sliders" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        android:text="Xizmat"
                        android:textColor="#4C4F51"
                        android:textSize="@dimen/home_grid_item_text_size" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_rowWeight="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:id="@+id/minut_fragment"
                        android:layout_width="@dimen/home_grid_icon_size"
                        android:layout_height="@dimen/home_grid_icon_size"
                        android:background="@drawable/service_back"
                        android:padding="10dp"
                        android:src="@drawable/phone" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        android:text="Minut"
                        android:textColor="#4C4F51"
                        android:textSize="@dimen/home_grid_item_text_size" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_rowWeight="1"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:id="@+id/internet_banner"
                        android:layout_width="@dimen/home_grid_icon_size"
                        android:layout_height="@dimen/home_grid_icon_size"
                        android:background="@drawable/service_back"
                        android:padding="10dp"
                        android:src="@drawable/internet" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        android:text="Internet"
                        android:textColor="#4C4F51"
                        android:textSize="@dimen/home_grid_item_text_size" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_rowWeight="1"
                    android:layout_column="2"
                    android:layout_columnWeight="1"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:id="@+id/sms_fragment"
                        android:layout_width="@dimen/home_grid_icon_size"
                        android:layout_height="@dimen/home_grid_icon_size"
                        android:background="@drawable/service_back"
                        android:padding="10dp"
                        android:src="@drawable/message_square" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        android:text="SMS"
                        android:textColor="#4C4F51"
                        android:textSize="@dimen/home_grid_item_text_size" />

                </LinearLayout>
            </GridLayout>
        </androidx.cardview.widget.CardView>





</LinearLayout>