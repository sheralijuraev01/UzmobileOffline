<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="4dp"
    android:orientation="vertical"

    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="8dp"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/news_title"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubik_medium"
                android:text="Endi judayam arzon"
                android:textColor="#474747"
                android:textSize="@dimen/exp_title_name_text_size" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="0.1"
                android:layout_gravity="center_vertical">

                <ImageView
                    android:id="@+id/news_indicator"
                    android:layout_width="@dimen/exp_drop_icon_size"
                    android:layout_height="@dimen/exp_drop_icon_size"
                    android:layout_marginEnd="16dp"
                    android:gravity="end"
                    android:src="@drawable/close_expandable_view" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/news_child_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingBottom="8dp"
            android:textColor="#474747"
            android:text="Endi judayam arzon"
            android:textSize="@dimen/standart_text_size"
            android:visibility="gone" />


    </LinearLayout>


</androidx.cardview.widget.CardView>